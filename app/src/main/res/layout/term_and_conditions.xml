<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#ffffff"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/rel_privacy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/tv_clickff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:layout_centerHorizontal="true"
            android:textColor="#fd2c7af7"
            android:textSize="@dimen/_18sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:text=" GPS Route Guide"/>
        <TextView
            android:id="@+id/tv_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_clickff"
            android:layout_centerHorizontal="true"
            android:textColor="#1b1b1b"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Live Earth Map ,Live Street view "/>


        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_click"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_11sdp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Your Privacy is important to Prime apps studio. Sometime \nwe need information to provide services that you request;\n this privacy statement applies to Prime"/>
        <LinearLayout
            android:id="@+id/ll_see"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_below="@+id/tv_info">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:text="Apps and its products.  "
                android:textColor="#212121"
                android:textSize="@dimen/_11sdp" />
            <RelativeLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_priff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:onClick="policyClicked"
                    android:text=" See more"
                    android:textColor="#fd2c7af7"
                    android:textSize="@dimen/_13sdp" />
                <View
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="1dp"
                    android:background="#fd2c7af7"
                    android:layout_below="@+id/tv_priff"
                    android:layout_marginLeft="2dp"></View>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_che"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_see"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"

            >

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:button="@drawable/check_box_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="By continuing you accept our  "
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:onClick="policyClicked"
                    android:textStyle="bold"
                    android:text=" Privacy Policy"
                    android:textColor="#fd2c7af7"
                    android:textSize="@dimen/_10sdp" />
                <View
                    android:layout_width="@dimen/_66sdp"
                    android:layout_height="1dp"
                    android:background="#fd2c7af7"
                    android:layout_below="@+id/tv_pri"
                    android:layout_marginLeft="2dp"></View>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/ll_che">

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_below="@+id/ll_che"
            android:onClick="termsClicked">
            <TextView
                android:id="@+id/tv_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Terms and Conditions"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fd2c7af7"
                android:layout_below="@+id/tv_term"
                ></View>
        </RelativeLayout>
        <Button
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/btn_start"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/prime_unselected"
            android:onClick="getStartedClicked"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>
</LinearLayout>



