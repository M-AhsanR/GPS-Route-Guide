<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_250sdp"
    android:orientation="vertical"
        android:layout_centerInParent="true"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_loc_bg"
        android:orientation="vertical"

        >




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Contact"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:layout_margin="@dimen/_20sdp"
            android:gravity="center"/>
        <View
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_gravity="center"
            android:background="@color/tumblr_orange"/>


        <TextView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:text="Select from Contact"
            android:id="@+id/add_from_contacts"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/shadow"
            android:layout_marginTop="@dimen/_20sdp"/>
        <TextView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:text="Select from Call log"
            android:id="@+id/add_from_callLog"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/shadow"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:text="Select from Messages"
            android:id="@+id/add_from_messages"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/shadow"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:text="Select Manually"
            android:id="@+id/manually_add"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/shadow"
            android:layout_marginTop="@dimen/_10sdp"/>
    </LinearLayout>


</RelativeLayout>
</RelativeLayout>
