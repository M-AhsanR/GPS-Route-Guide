<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_270sdp"
    android:orientation="vertical"
        android:layout_centerInParent="true"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:orientation="vertical"

        >


        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/gpsroute"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS Navigation"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"/>
        <View
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_gravity="center"
            android:background="@color/tumblr_orange"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduce with new features"
            android:textColor="@color/black"
           android:textSize="@dimen/_13sdp"
            android:layout_margin="@dimen/_8sdp"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/fake_location"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/favorite_loc"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/track_history"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="Fake Location"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="Favourite Location"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                android:gravity="center"/>

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="Tracking History"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_8sdp"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shadow"
            android:id="@+id/mOK"
            android:text="@string/trythisforfree"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"/>
    </LinearLayout>


</RelativeLayout>
</RelativeLayout>
